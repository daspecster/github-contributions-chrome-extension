{
  "manifest_version": 2,

  "name": "Github contributions",
  "description": "This extension displays your daily Github contributions.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://github.com/*",
    "https://github.com/daspecster/github-contributions-chrome-extension/graphs/contributors"
  ]
}
